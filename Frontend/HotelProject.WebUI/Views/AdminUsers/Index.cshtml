@model List<ResultAppUserListDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body">
				<div class="active-member">
					<div class="table-responsive">
						<table class="table table-xs mb-0">
							<thead>
								<tr>
									<th>Ad SoyAd</th>
									<th>Şehir</th>
									<th>Ülke</th>
									<th>Cinsiyet</th>
									<th>Durum</th>
									<th>Sil</th>
									<th>Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td><img src="@item.ImageUrl" class="rounded-circle mr-3" alt="">@item.Name @item.Surname</td>
										<td>@item.City</td>
										<td>@item.Country</td>
										<td>@item.Gender</td>
										<td><i class="fa fa-circle-o text-success  mr-2"></i> Aktif</td>
										<td><a href="/AdminUsers/DeleteUser/" class="btn btn-danger">Sil</a></td>
										<td><a href="/AdminUsers/UpdateUser/" class="btn btn-success">Güncelle</a></td>

									</tr>
								}
							</tbody>
							<br />
							<td><a href="/AdminUsers/AddUser" class="btn btn-primary">Yeni Kullanıcı</a></td>
						</table>
					</div>
				</div>
			</div>
		</div>  
	</div>
</div>
