@model ResultSendBoxContactDto
@{
	ViewData["Title"] = "SendBoxDetailById";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="card-body">

	<div class="email-left-box">
		<a href="/AdminContact/AddSendMessage/" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>

		@await Html.PartialAsync("_SideBarAdminContactPartial")

		<h5 class="mt-5 m-b-10">Kategoriler</h5>

		@await Html.PartialAsync("_SideBarAdminContactCategoryPartial")
	</div>

	<div class="email-right-box">
		<div role="toolbar" class="toolbar">
			<div class="btn-group">
				<button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark dropdown-toggle" type="button">
					<span class="caret m-l-5">Giden Mesajlar</span>
				</button>

			</div>
		</div>


		<div class="read-content">
			<div class="media pt-5">
				<img class="mr-3 rounded-circle" src="/adminweb/images/avatar/1.jpg">
				<div class="media-body">
					<h5 class="m-b-3">@Model.SenderName</h5>
					<p class="m-b-2">@Model.Date.ToString("ddd-MMM-yyyy")</p>
				</div>

			</div>
			<hr>
			<div class="media mb-4 mt-1">
				<div class="media-body">
				
					<h4 class="m-0 text-primary">@Model.Title</h4><small class="text-muted">Alıcı: @Model.ReceiverMail</small>
				</div>
			</div>
			<h5 class="m-b-15">Selam ,@Model.ReceiverName</h5>
			
			<p>
				@Model.Content
			</p>
			
		</div>



	</div>
</div>

