@model List<ResultServiceDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
	int count = 0;
}

<table class="table table-bordered">

	<tr>
		<th>#</th>
		<th>İcon</th>
		<th>Başlık</th>
		<th>Açıklama</th>
		<th>Sil</th>
		<th>Güncelle</th>
	</tr>

	@foreach (var item in Model)
	{
		count++;
		<tr>
			<td>@count</td>
			<td>@item.ServiceIcon</td>
			<td>@item.Title</td>
			<td>@item.Description</td>
			<td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger" >Sil</a></td>
			<td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-success">Güncelle</a></td>
		</tr>

	}
</table>
<br />
<td><a href="/Service/AddService/" class="btn btn-primary">Yeni Hizmet</a></td>

