@model List<ResultAboutDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
	int count = 0;
}

<table class="table table-bordered">

	<tr>
		<th>#</th>
		<th>Başlık 1</th>
		<th>Başlık 2</th>
		<th>Content</th>
		<th>Güncelle</th>
	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<td>@count</td>
			<td>@item.Title1</td>
			<td>@item.Title2</td>
			<td>@item.Content</td>

			<td><a href="/AdminAbout/UpdateAbout/@item.AboutID" class="btn btn-success">Güncelle</a></td>
		</tr>
	}

</table>


