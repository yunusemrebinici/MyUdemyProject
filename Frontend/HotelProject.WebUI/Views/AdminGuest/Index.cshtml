@model List<ResultGuestDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
	int count = 0;
}

<table class="table table-bordered">

	<tr>
		<th>#</th>
		<th>İsim Soyad </th>
		<th>Şehir</th>
		<th>Sil</th>
		<th>Güncelle</th>
	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<td>@count</td>
			<td>@item.Name @item.Surname</td>
			<td>@item.City</td>

			<td><a href="/AdminGuest/DeleteGuest/@item.GuestID" class="btn btn-danger">Sil</a></td>
			<td><a href="/AdminGuest/UpdateGuest/@item.GuestID" class="btn btn-success">Güncelle</a></td>
		</tr>
	}
</table>
<a href="/AdminGuest/AddGuest/" class="btn btn-primary">Yeni Misafir</a>
