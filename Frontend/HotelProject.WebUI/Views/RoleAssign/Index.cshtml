@model List<HotelProject.DataAccessLayer.EntitiyFramework.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    
    <thead>
        <tr>      
            <th>Kullanıcı</th>
            <th>Rol Ata</th>
        </tr>

    </thead>

    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td><img src="@item.ImageUrl" class="rouned-circle mr-3" alt="" />@item.Name @item.Surname</td>
                <td><a href="/RoleAssign/AssignRole/@item.Id" class="btn btn-warning">Rol Ata</a></td>
            </tr>
        }
    </tbody>

</table>

