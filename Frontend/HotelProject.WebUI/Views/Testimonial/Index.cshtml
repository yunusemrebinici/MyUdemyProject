@model List<TestimonialViewModel>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
	int count = 0;
}

<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>İsim</th>
		<th>Ünvan</th>
		<th>Açıklama</th>
		<th>Görsel Yolu</th>
		<th>Sil</th>
		<th>Güncelle</th>

	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<td>@count</td>
			<td>@item.Name</td>
			<td>@item.Title</td>
			<td>@item.Description</td>
			<td>@item.Image</td>
			<td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-danger">Sil</a></td>
			<td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-success">Güncelle</a></td>

		</tr>
	}
</table>
<td><a href="/Testimonial/AddTestimonial" class="btn btn-primary">Yeni Referans</a></td>
